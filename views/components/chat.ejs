<section id="messages">
    <% if (data.length > 0) { %>

    <% for (let i = 0; i < data[0].messages.length; i++) { %>

    <% if (data[0].messages[i].sender === data.clientid) { %>
    <div class="message messageSend" data-time="<%= data[0].messages[i].time %> ">
        <p>
            <%= data[0].messages[i].content %>
        </p>
    </div>
    <% } else { %>
    <div class="message messageRecieve">
        <img class="profilePic" src="img/profilePicture1x256.jpg" alt="Profiel foto van Hinze">
        <p>
            <%= data[0].messages[i].content %>
        </p>
    </div>
    <% } %>

    <% } %>
    <% } %>

</section>

<section id="messageForm">
    <form action="/chats" method="post">
        <input type="text" id="message" name="message" placeholder="Type a message">
        <button type="submit" id="sendMessage">
            <svg width="24" height="21" viewBox="0 0 24 21" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M0.0114107 0L0 8.68966L10.4762 10.5L0 12.3103L0.0114107 21L24 10.5L0.0114107 0Z" />
            </svg>
        </button>
    </form>
</section>